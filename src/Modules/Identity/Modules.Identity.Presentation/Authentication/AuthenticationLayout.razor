@attribute [AllowAnonymous]
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<div class="w-full min-h-screen flex items-center justify-center flex-col lg:flex-row">
    <div class="w-full md:w-auto flex gap-0 mg:gap-40 flex-col md:flex-row items-center justify-center">
        <div class="h-full w-full lg:w-2/3 flex flex-col items-center justify-center">
            <div class="w-full md:max-w-lg 2xl:max-w-3xl flex flex-col items-center justify-center gap-5 md:gap-y-10 2xl:-mt-20">
                <span class="flex gap-1 py-1 px-3 border rounded-full text-sm md:text-base border-gray-300 text-gray-600">Manage all your task in one place!</span>
                <p class="flex flex-col gap-0 md:gap-4 text-4xl md:text-6xl 2xl:text-7xl font-black text-center text-blue-700">
                    <span>Cloud-Based</span>
                    <span>Innovation Platform</span>
                </p>
                <div class="cell">
                    <div class="circle rotate-in-up-left"></div>
                </div>
            </div>
        </div>
        <div class="w-full md:w-1/3 p-4 md:p-1 flex flex-col">
            @Body
        </div>
    </div>
</div>
