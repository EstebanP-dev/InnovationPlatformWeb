<AuthorizeView Roles="Admin">
    <Authorized>
        <SelectBox TValue="@string" @bind-Value="SelectedType" Name="project_types_selector" Label="Type" Title="Elige un tipo" Disabled="Completed">
            @if (_data.Any())
            {
                foreach(var item in _data)
                {
                    if ((item.Name ?? "").Equals(SelectedType, StringComparison.OrdinalIgnoreCase))
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            }
            else
            {
                <option>No hay tipos disponibles. Agrega unos a la db o revisa el servicio.</option>
            }
        </SelectBox>
    </Authorized>
    <NotAuthorized>
        <SelectBox TValue="@string"
                   @bind-Value="SelectedType"
                   Name="project_types_selector"
                   Label="Type"
                   Title="Elige un tipo"
                   Disabled="@(!FromCreate)">
            @if (_data.Any())
            {
                foreach(var item in _data)
                {
                    if ((item.Name ?? "").Equals(SelectedType, StringComparison.OrdinalIgnoreCase))
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            }
            else
            {
                <option>No hay tipos disponibles.</option>
            }
        </SelectBox>
    </NotAuthorized>
</AuthorizeView>
